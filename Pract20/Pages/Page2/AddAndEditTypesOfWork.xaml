<Page
    x:Class="Pract20.Pages.Page2.AddAndEditTypesOfWork"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pract20.Pages.Page2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="266.6"
    Loaded="Page_Loaded"
    Style="{StaticResource PageBackground}"
    mc:Ignorable="d">

    <StackPanel>

        <Label Content="Марка автомобиля:" />

        <TextBox x:Name="tbCarBrand" />

        <Label Content="Наименование работы:" />

        <TextBox x:Name="tbNameOfTheWork" />

        <Label Content="Стоимость работы:" />

        <TextBox x:Name="tbCostOfWork" />

        <Button
            x:Name="bAddEdit"
            Margin="20"
            HorizontalAlignment="Center" />

    </StackPanel>

</Page>
